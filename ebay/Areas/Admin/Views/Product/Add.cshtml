@model ebay.ViewModel.ProductAddVm

<h1>This is Add page</h1>

<div class="container">
    <form method="post" enctype="multipart/form-data">
        <div class="row">

            <div class="mb-3 row">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3 row">
                <label asp-for="CategoryId" class="form-lable"></label>
                <select class="form-select select2" multiple="multiple" asp-for="CategoryIds"
                    asp-items="@Model.CategoryList()">
                    @* <option disabled>--SELECT CATEGORY--</option> *@
                </select>
            </div>
            <div class="mb-3 row">
                <label asp-for="Description" class="form-lable"></label>
                <textarea asp-for="Description" class="form-label"></textarea>
            </div>
            <div class="mb-3 row">
                <label asp-for="Brand" class="form-label"></label>
                <input asp-for="Brand" class="form-control">
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="mb-3 row">
                <label asp-for="Price" class="form-label"></label>
                <input asp-for="Price" class="form-control">
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="mb-3 row">
                <label asp-for="Stock" class="form-label"></label>
                <input asp-for="Stock" class="form-control" id="CategoryName">
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <div class="mb-3 row">
                <label asp-for="ImageFile" class="form-label"></label>
                <input asp-for="ImageFile" accept="image/*" class="form-control">
            </div>
        
            <div class="row">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-primary form-control">Add</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Product" asp-action="Index" class="btn btn-secondary border form-control">
                        Back
                    </a>
                </div>
            </div>
        </div>


    </form>
</div>


