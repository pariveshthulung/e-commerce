                        <div class="row">
                            <div class="col-12 col-md-6 pb-1">
                                <button type="submit"
                                    class="btn btn-warning bg-gradient btn-sm  w-50 py-2 text-uppercase fw-semibold">
                                    Add to Cart
                                </button>
                            </div>
                            <div class="col-12 col-md-6 pb-1">
                                <button type="submit" asp-action="Checkout" asp-controller="Cart"
                                    class="btn btn-warning bg-gradient btn-sm  w-50 py-2 text-uppercase fw-semibold"
