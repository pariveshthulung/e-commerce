                        </div>
                        <div class="row ">
                            <h1 class="text-dark" style="font-size: 24px;line-height: 32px;">@Model.Product.Name
                            </h1>
                        </div>
                        <div class="row ">
                            <span>Brand : @Model.Product.Brand</span>
                        </div>
                        <hr>
                        <div class="row ">
                            <h4 class="text-dark text-opacity-100 pt-2 pb-2">
                                <span>
                                    @Model.Product.Price.ToString("c")
                                </span>
                            </h4>
                        </div>
